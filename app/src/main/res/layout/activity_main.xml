<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.roy.contact.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp"
    android:background="@drawable/back_green">


    <TextView
        android:id="@+id/text1"
        android:layout_width="303dp"
        android:layout_height="36dp"
        android:text= "@string/Result"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"

        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"

        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="125dp" />

    <EditText
        android:id="@+id/num1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/zero"
        android:inputType="numberDecimal"
        android:textColor="@color/white"
        android:textColorHint="@color/red"

        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="7dp"
        android:layout_marginStart="16dp"/>

    <EditText
        android:id="@+id/num2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/zero"
        android:inputType="numberDecimal"
        android:textColor="@color/white"
        android:textColorHint="@color/red"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="66dp" />

    <Button
        android:id="@+id/add"
        android:layout_width="73dp"
        android:layout_height="65dp"
        android:background="@drawable/add2"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="34dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="202dp"
        tools:layout_editor_absoluteY="201dp" />

    <Button
        android:id="@+id/sub"
        android:layout_width="73dp"
        android:layout_height="69dp"
        android:background="@drawable/minus"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="34dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="266dp" />

    <Button
        android:id="@+id/mul"
        android:layout_width="72dp"
        android:layout_height="71dp"
        android:background="@drawable/mul"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="107dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="266dp" />

    <Button
        android:id="@+id/div"
        android:layout_width="62dp"
        android:layout_height="57dp"
        android:background="@drawable/div"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="115dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="205dp" />

    <TextView
        android:id="@+id/json"
        android:text="@string/ether"
        android:layout_width="123dp"
        android:layout_height="31dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="401dp" />

    <Button
        android:id="@+id/js"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ether"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="447dp" />

    <Button
        android:id="@+id/btnHit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hit"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="200dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="287dp" />

</android.support.constraint.ConstraintLayout>
